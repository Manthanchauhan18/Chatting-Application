<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ChangePasswordActivity">


        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Change Password"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="100dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvOldPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvChangePassword"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/etOldPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/baseline_vpn_key_24"
                android:padding="10dp"
                android:hint="Old password"
                android:inputType="text"
                android:drawablePadding="10dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvNewPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvOldPassword"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/baseline_vpn_key_24"
                android:padding="10dp"
                android:hint="New password"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvReEnterNewPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvNewPassword"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp">

            <EditText
                android:id="@+id/etReEnterNewPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/baseline_vpn_key_24"
                android:padding="10dp"
                android:hint="Re-enter new password"
                android:drawablePadding="10dp"
                android:inputType="textEmailAddress"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvChangePassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cvReEnterNewPassword"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#2c3e50">

            <TextView
                android:id="@+id/tvChangePasswordcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="Change Password"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:drawablePadding="10dp"/>

        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/login_bottom_left"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
